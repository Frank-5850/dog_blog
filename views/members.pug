//- Start of the Navbar
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.justify-content-left
  div.container-fluid
    a.navbar-brand(href='#') Dog Blog
    button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    div#navbarNavDropdown.collapse.navbar-collapse
        ul.navbar-nav
            li.nav-item
                a.nav-link.active(aria-current='page', href='./index.html') Home
            li.nav-item
                a.nav-link(href='./blog.html') Blog
            li.nav-item
                a.nav-link(href='./parks.html') Parks
            li.nav-item.hide#navLogout
                a.nav-link(href='/logout') Logout
            li.nav-item.hide#navLogin
                a.nav-link(href='/signin') Login
//- End Nav
//- Start of Content Container
#page-content
  .p-5.container.top-buffer.mh-100.justify-content-center.align-items-center
    div.row.justify-content-center.align-items-center
        div(class="col-md-6 col-md-offset-3")
          h4.text-center Welcome 
            span#member-name
    .row
      .col-md-12.col-md-offset-3
          div.card.mt-2
            div.card-body
              h4.border-bottom.border-dark.text-center Your Blog Posts
              ul.list-group.list-group-flush.text-left
                  li.list-group-item Title:
                    span#title  Placeholder for title
                  li.list-group-item Creation Date:
                    span#date  Placeholder for create date
                  li.list-group-item Most Recent Update:
                    span#date  Placeholder for update
                  li.list-group-item Category:
                    span#category  Placeholder for Category
                  li.list-group-item Body:
                    span#body  Placeholder for body
                  
//- Start of Footer
footer#sticky-footer.py-4.bg-dark.text-white
  .container.text-center
